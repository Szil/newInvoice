# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Home
GET     /                           controllers.Application.index()

#Login
GET     /login                      controllers.Application.login()
POST    /login                      controllers.Application.authenticate()

#Dashboard / logout
GET     /dashboard                  controllers.Application.dashboard()
GET     /logout                     controllers.Application.logout()

# User handling
GET     /dashboard/index            controllers.Users.index()
GET     /user/userList              controllers.Users.users()
GET     /dashboard/registerForm     controllers.Users.register()
POST    /user/createUser            controllers.Users.createUser()
POST    /user/delete/:userId        controllers.Users.delete(userId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET     /webjars/*file              controllers.WebJarAssets.at(file)
